{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@config/*": ["./config/*"],
      "@hooks/*": ["./hooks/*"],
      "@constants/*": ["./constants/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@pages/*": ["./pages/*"],
      "@utils/*": ["./utils/*"],
      "@features/*": ["./features/*"],
      "@services/*": ["./services/*"],
      "@modules/*": ["./modules/*"]
    }
  },
  "include": ["src", "postcss.config.cjs", "custom.d.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
